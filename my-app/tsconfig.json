{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext", "ES2020"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noImplicitAny": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "ES2020"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/app/sidebar/page.jsx",
        "src/components/ColorModeIconDropdown.js"
    ],
    "exclude": ["node_modules"]
}
